{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",              // Aponta para a raiz do projeto
    "paths": {
      "@/*": ["./*"],            // Mapeia '@/...' para qualquer arquivo na raiz do projeto
      "@/constants/*": ["./constants/*"] // Mapeia especificamente para a pasta 'constants'
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
