{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["react", "react-native"],
    "paths": {
      "@/*": ["./*"],
      "@/constants/*": ["./constants/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "data/**/*.ts",
    "_context/**/*.ts",
    "_context/**/*.tsx",
    "firebase/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
